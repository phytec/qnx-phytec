<?xml version="1.0"?>
<module name="deva-mixer-cs42xx8">
  <classification>Driver</classification>
  <description>
    <short>Generic Audio Codec for CS42xx8</short>
    <abstract><![CDATA[
			The deva-mixer-cs42xx8 shared object is responsible for configuring and operating a CS42xx8 audio codec device under the indirect control of the QNX Sound Architecture (io-audio). This driver is launched at the request of audio drivers (deva-ctrl-*) for hardware which includes an CS42xx8 codec.
	        ]]></abstract>
  </description>
  <supports>
    <availability>
      <os name="nto">
        <cpu isa="ppc">
          <byteOrder>be</byteOrder>
          <byteOrder>be.spe</byteOrder>
        </cpu>
        <cpu isa="sh">
          <byteOrder>le</byteOrder>
        </cpu>
        <cpu isa="arm">
          <byteOrder>le</byteOrder>
          <byteOrder>le.v7</byteOrder>
        </cpu>
        <cpu isa="x86"/>
        <cpu isa="mips">
          <byteOrder>le</byteOrder>
          <byteOrder>be</byteOrder>
        </cpu>
      </os>
    </availability>
    <availability supported="false">
